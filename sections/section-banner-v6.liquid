<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v6 mt-all">
    <div class="lazyload">
      <div class="container container-v2">
        <div class="row">      
          <div class="col-lg-4 col-md-6 col-12 col-sm-12 order-sm-1 order-md-1 order-lg-1">
            <div class="banner-ver">
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner1}}" class="box-img d-block">
                  {% if section.settings.banner_img1 != blank %}
                  <img data-src="{{section.settings.banner_img1 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//placehold.it/900x900" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner1 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner1}}</h3>
                  {% endif %}
                  {% if section.settings.button_banner1 != blank %}
                  <a href="{{section.settings.url_button_banner1}}">{{section.settings.button_banner1}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-12 col-12 col-sm-12 order-sm-2 order-md-3 order-lg-2">
            <div class="wrap-banner">
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner2}}" class="box-img d-block">
                  {% if section.settings.banner_img2 != blank %}
                  <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//placehold.it/900x420" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner2 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner2}}</h3>
                  {% endif %}

                  {% if section.settings.button_banner2 != blank %}
                  <a href="{{section.settings.url_button_banner2}}">{{section.settings.button_banner2}}</a>
                  {% endif %}
                </div>
              </div>
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner3}}" class="box-img d-block">
                  {% if section.settings.banner_img3 != blank %}
                  <img data-src="{{section.settings.banner_img3 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//placehold.it/900x420" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner3 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner3}}</h3>
                  {% endif %}

                  {% if section.settings.button_banner3 != blank %}
                  <a href="{{section.settings.url_button_banner3}}">{{section.settings.button_banner3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6 col-12 col-sm-12 order-sm-3 order-md-2 order-lg-3">
            <div class="banner-ver">
              <div class="banner-item">
                <a href="{{section.settings.url_button_banner4}}" class="box-img d-block">
                  {% if section.settings.banner_img4 != blank %}
                  <img data-src="{{section.settings.banner_img4 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                  {% else %}
                  <img data-src="//placehold.it/900x900" class="lazyload img-fluid w-100" alt="_img">
                  {% endif %}
                </a>
                <div class="content">
                  {% if section.settings.title_banner4 != blank %}
                  <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner4}}</h3>
                  {% endif %}
                  {% if section.settings.button_banner4 != blank %}
                  <a href="{{section.settings.url_button_banner4}}">{{section.settings.button_banner4}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

