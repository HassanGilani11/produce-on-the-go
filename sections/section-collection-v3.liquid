</style>
{% schema %}
  {
  "name": "COLLECTION V3",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title_heading",
      "label": "Title Heading",
      "default": "Types of Ceramic"
    },
	{
      "type": "color",
      "id": "color_title",
      "label": "Color Title Collection",
		"default": "#222222"
    },
	{
      "type": "color",
      "id": "bg_collection",
      "label": "Color Background Collection",
		"default": "#F8F0ED"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "colection",
      "name": "Item Collection v3",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_img",
          "info": "456 x 456px recommended",
          "label": "Collection 1"
        },
		{
          "type": "text",
          "id": "title_collection",
          "label": "Label Collection",
          "default": " Plantza"
        },
        {
          "type": "url",
          "id": "brand_url",
          "label": "URL collection",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "COLLECTION V3",
      "category": "HOME",
	  "blocks": [
        {
          "type": "colection",
          "settings": {
            "title_collection": "Porcelain"
          }
        },
        {
          "type": "colection",
          "settings": {
            "title_collection": "Bone China"
          }
        },
        {
          "type": "colection",
          "settings": {
            "title_collection": "Earthenware"
          }
        }
      ]
    }
  ]
}
